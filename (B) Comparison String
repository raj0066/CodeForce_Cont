#include<bits/stdc++.h>
using namespace std;

void X()
{
    long long n,m,k,a=0,b=0,sum=0,cnt1=0,cnt2=0,ans=0;
    cin>>n;

    string s;
    cin>>s;
    ans=1;cnt1=1;

    for(int i=1;i<n;i++){
        if(s[i]!=s[i-1]){ cnt1 = 1; }
        else{ cnt1++; }
        ans = max(ans,cnt1);
    }

    cout<<ans+1<<"\n";

}

int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    int t=1;
    cin>>t;
   while(t--)
    {
        X();
    }
}

