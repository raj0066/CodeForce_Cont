#include<bits/stdc++.h>
using namespace std;

void X()
{
    long long n,m,k,a=0,b=0,sum=0,cnt1=0,cnt2=0,mid;
    cin>>n;

    if(n%2!=0){
        cout<<"NO"<<"\n";
    }
    else{
        cout<<"YES"<<"\n";
        for(int i=0;i<n/2;i++){
            if(i%2==0){
                cout<<"AA";
            }
            else{
                cout<<"BB";
            }
        }
        cout<<"\n";
    }
}

//6
int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    int t=1;
    cin>>t;
   while(t--)
    {
        X();
    }
}

