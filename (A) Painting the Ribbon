#include<bits/stdc++.h>
using namespace std;
typedef long long ll;
const int MAX=200'007;
int res[MAX];

#define all(x)  (x).begin(), (x).end()


void X()
{
    long long n,m,k,a=0,b=0,c,sum=0,cnt1=0,cnt2=0,ans=0,cnt3=0;
    string s; char ch; 

    cin>>n>>m>>k;

    ans = m*(n-k-1);

    if(ans>=n)
    {
        cout<<"YES\n";
    }
    else{
        cout<<"NO\n";
    }
    
}
// 10 6 10
// 12 4 6
int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);

    int t=1;
    cin>>t;
    while(t--)
    {
        X();
    }
    
    return 0;
}
